        <div style="flex:1"></div>
        <div id="status">Ready</div>
      </div>
      <div class="quick-links">
        <button class="quick" data-url="https://www.youtube.com"><i class="fa-brands fa-youtube"></i>Youtube</button>
        <button class="quick" data-url="https://now.gg"><i class="fa-solid fa-gamepad"></i>Now.gg</button>
        <button class="quick" data-url="https://duckduckgo.com/"><i class="fa-solid fa-globe"></i>DuckDuck GO</button>
      </div>
    </section>
  </main>
  <script>
    function go(url) {
      location.href = `/s/embed.html#${url}`;
    }
    const form = document.getElementById('navForm');
    const input = document.getElementById('query');
    const status = document.getElementById('status');
    const quicks = document.querySelectorAll('.quick');
    function looksLikeDomain(v){return /^[\w-]+(\.[\w-]+)+.*$/i.test(v);}
    function hasProtocol(v){return /^(https?|file|ftp):\/\//i.test(v);}
    function buildUrl(raw){
      const t = raw.trim();
      if (!t) return null;
      if (hasProtocol(t)) return t;
      if (looksLikeDomain(t)) return 'https://' + t;
      return 'https://duckduckgo.com/search?q=' + encodeURIComponent(t);
    }
    form.addEventListener('submit', e=>{
      e.preventDefault();
      const url = buildUrl(input.value || '');
      if (!url) return;
      status.textContent = 'Opening…';
      go(url);
    });
    document.getElementById('clearBtn').addEventListener('click', ()=>{
      input.value = '';
      input.focus();
      status.textContent = 'Cleared';
      setTimeout(()=>status.textContent = 'Ready', 800);
    });
    quicks.forEach(btn=>{
      btn.addEventListener('click', ()=>{
        go(btn.dataset.url);
      });
    });
    input.addEventListener('keydown', e=>{
      if (e.key === 'Escape') {
        input.value = '';
        status.textContent = 'Cleared';
        setTimeout(()=>status.textContent = 'Ready', 800);
      }
    });
    window.addEventListener('keydown', e=>{
      if ((e.ctrlKey || e.metaKey) && e.key.toLowerCase() === 'k') {
        e.preventDefault();
        input.focus();
        input.select();
      }
    });
  </script>
